{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Web3 Risk Entry",
  "type": "object",
  "required": ["id", "title", "category", "type", "scopes", "owners", "objectives"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^R:[A-Z_]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["QUALITATIVE", "QUANTITATIVE", "HYBRID"]
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "direction", "goal"],
        "properties": {
          "type": {
            "type": "string"
          },
          "direction": {
            "type": "string",
            "enum": ["INCREASE", "DECREASE"]
          },
          "goal": {
            "type": "string",
            "enum": ["INCREASE", "DECREASE"]
          }
        }
      }
    },
    "indicatorWeights": {
      "type": "object",
      "patternProperties": {
        "^I:[A-Z_]+$": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "measures": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^M:[A-Z_]+$"
      }
    }
  },
  "additionalProperties": false
}
